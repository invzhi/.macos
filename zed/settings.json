// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // Dark theme, vim mode and auto save.
  "theme": "One Dark",
  "vim_mode": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 10000
    }
  },
  // AI assistant.
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    }
  },
  // Proxy for GFW.
  "proxy": "socks5h://localhost:7890",
  // Disable inline git blame, collaboration panel, edit predictions and telemetry.
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
