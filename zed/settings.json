// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // Dark theme and font.
  "theme": "One Dark",
  "buffer_font_family": "Monaco",
  "buffer_font_size": 13,
  "ui_font_family": "Monaco",
  "ui_font_size": 15,
  // Vim mode and only use system clipboard when explicitly specified.
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  // Auto save.
  "autosave": "on_focus_change",
  // Disable format on save for yaml.
  "languages": {
    "YAML": {
      "format_on_save": "off"
    }
  },
  // Disable modernize for Go.
  "lsp": {
    "gopls": {
      "initialization_options": {
        "analyses": {
          "modernize": false
        }
      }
    },
    "protobuf-language-server": {
      "binary": {
        "path": "buf",
        "arguments": ["beta", "lsp"]
      }
    }
  },
  // Edit prediction and AI assistant.
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "version": "2",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-thinking-latest"
    }
  },
  // Proxy for GFW.
  "proxy": "socks5h://127.0.0.1:7890",
  // Disable inline git blame, collaboration panel and telemetry.
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
